@model Repository.Models.Announcement

@{
    ViewBag.Title = "Usuń ogłoszenie nr " + @Model.Id;
    ViewBag.Description = "Szczególy ogłoszenia nr " + @Model.Id + "Opis do Google";
    ViewBag.KeyWords = "Ogłoszenie, " + @Model.Id + ", usuń";
}

<h2>Usuń ogłoszenie nr @Model.Id</h2>

@if (ViewBag.Blad == true)
{
    <div class="alert alert-danger" role="alert">
        Wystąpił błąd podczas usuwania.<br/>
        Spróbuj ponownie.
    </div>
}

<h3>Czy na pewno chcesz usunąć?</h3>
<div>
    <h4>Ogłoszenie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id autora:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserId)
        </dd>

        <dt>
            Treść:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

        <dt>
            Tytuł:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Data dodania:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateAdded)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-danger" 
                   onclick="return confirm('Czy na pewno chcesz usunąć?')"/>
            @Html.ActionLink("Wróć", "Index", null, new { @class = "btn btn-warning" })
        </div>
    }
</div>
